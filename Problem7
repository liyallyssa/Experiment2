Problem 7
#include <iostream>
using namespace std;
int main()
{
    int num1;
    int sum;
    
    
    cout <<"Enter a num1ber: ";
    cin >> num1;
   
   	while (num1 > 0) 
   	{
   		sum = 0;
    		for(int i=1; i<=num1; i++) {
				sum=sum+i;}
    cout << "The sum of all whole num1bers from 1 to " << num1 << " is " << sum << endl;
    
	cout<<"Enter a num1ber: ";
	cin>> num1; 
	}
	cout<< "Thank you!";
    return 0;
    
}
